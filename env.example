# Application Configuration
APP_NAME=Muckard FastAPI Backend
DEBUG=True
API_V1_PREFIX=/api/v1

# Security
# SECRET_KEY will be auto-generated if not set
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (REQUIRED)
DATABASE_URL=postgresql://postgres:postgress@localhost:5433/muckard_db

# Redis (REQUIRED)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# HashiCorp Vault (Optional for development)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=
VAULT_MOUNT_PATH=secret

# Kraken API Base URL
KRAKEN_API_BASE_URL=https://api.kraken.com

# Kraken API Keys
# IMPORTANT: Use read-only keys for development/testing
# Trading keys should ONLY be used in production environment

# Development/Testing (Read-only keys - SAFE for testing)
# Read-only keys cannot execute trades - safe for development
KRAKEN_API_KEY_READONLY=your_readonly_api_key_here
KRAKEN_API_SECRET_READONLY=your_readonly_api_secret_here

# Production (Trading keys - ONLY for production)
# ⚠️  WARNING: DO NOT use trading keys in development!
# ⚠️  Trading keys can execute real trades - use with extreme caution!
KRAKEN_API_KEY_TRADING=
KRAKEN_API_SECRET_TRADING=

# Default key mode (readonly for dev, trading for prod)
# Set to "readonly" for development, "trading" for production
KRAKEN_KEY_MODE=readonly

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://dev.muckard.com,https://admin.muckard.com

# Email (Resend API)
# Get your API key from https://resend.com/api-keys
# Required for OTP email verification
RESEND_KEY=re_hL8A6acK_3KmFaPThw31LFbXaPkbyScCc

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
KAFKA_ONBOARDING_TOPIC=onboarding.events
KAFKA_USER_EVENTS_TOPIC=user.events
KAFKA_KRAKEN_EVENTS_TOPIC=kraken.events
KAFKA_TRADING_EVENTS_TOPIC=trading.events
KAFKA_ENABLED=True

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
